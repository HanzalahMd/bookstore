<div class="row mb-5 top-bar" style="background-color: black; padding: 70px">
    <div class="col">
        <h1 style="text-align: center; color: white; ">Titles begins with {{search}}</h1>
    </div>
</div>

<table class="table mt-5 table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Authors</th>
            <th scope="col">Rating</th>
            <th scope="col">Pages</th>
        </tr>
    </thead>
    <tbody>
        {{#each display}}
        <tr>
            <td><a href="books/{{this.book_id}}">{{this.title}}</a></td>
            <td>{{this.authors}}</td>
            <td>{{this.rating}}</td>
            <td>{{this.pages}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="row mt-5">
    <div class="col-8">
        <div class="row">
            <div class="col-4">
                {{#if hasPrevPage}}
                <form action="/{{searchChar}}/{{prevPageNum}}" method="get">
                    <button type="submit" class="btn btn-warning">Prev</button>
                </form>
                {{/if}}
            </div>
            <div class="col-4">
                <div class="d-flex flex-row-reverse">
                    {{#if hasNextPage}}
                    <form action="/{{searchChar}}/{{nextPageNum}}" method="get">
                        <button type="submit" class="btn btn-warning">Next</button>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<a href="/"><button type="button" class="btn btn-success">Home</button></a>